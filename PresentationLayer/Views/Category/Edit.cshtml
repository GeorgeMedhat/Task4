@model BusinessLogic.Models.Category

<h2>Edit Category</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />

    <div class="mb-3">
        <label asp-for="catName" class="form-label"></label>
        <input asp-for="catName" class="form-control" />
        <span asp-validation-for="catName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="catOrder" class="form-label"></label>
        <input asp-for="catOrder" class="form-control" />
        <span asp-validation-for="catOrder" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>