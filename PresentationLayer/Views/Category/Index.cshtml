@model IEnumerable<BusinessLogic.Models.Category>

<div class="container mt-4">
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4">
                <partial name="_CategoryCard" model="category" />
            </div>
        }

        <!-- Add Category Card -->
        <div class="col-md-4">
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Add New Category</h5>

                    <form asp-action="AddCategory" method="post">
                        <div class="mb-2">
                            <input name="catName" class="form-control" placeholder="Category Name" required />
                        </div>
                        <div class="mb-2">
                            <input name="catOrder" type="number" class="form-control" placeholder="Category Order" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <a asp-action="GetAllCategories" class="btn btn-info">View All Categories</a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
    </div>
</div>
