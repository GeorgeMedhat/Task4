@model BusinessLogic.Models.Category

<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">@Model.catName</h5>
        <p class="card-text">Order: @Model.catOrder</p>
        <p class="card-text">
            <small class="text-muted">Deleted: @(Model.markedAsDeleted ? "Yes" : "No")</small>
        </p>

        <div class="d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-sm btn-warning me-2">
                Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">
                Delete
            </a>
        </div>
    </div>
</div>
